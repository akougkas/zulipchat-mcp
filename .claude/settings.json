{
  "statusLine": {
    "type": "command",
    "command": "uv run $CLAUDE_PROJECT_DIR/.claude/statusline/variation1-clean.py"
  },
  "model": "sonnet",
  "preferences": {
    "pythonPackageManager": "uv"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Read(**/secrets/**)"
    ]
  },
  "environment": {
    "PYTHON_PACKAGE_MANAGER": "uv",
    "MCP_SERVER": "zulipchat-mcp"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/git-commit-guard.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/code-validator.py",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üöÄ Zulip MCP Development Session Started' && test -f .env || echo '‚ö†Ô∏è  Warning: .env file not found'"
          }
        ]
      }
    ]
  }
}