# Zulip Configuration
# Copy this file to .env and fill in your actual values

# Your Zulip organization email address
ZULIP_EMAIL=your-bot@zulip.com

# Your Zulip API key (get from Settings > Account & privacy > API key)
ZULIP_API_KEY=your-api-key-here

# Your Zulip organization site URL
ZULIP_SITE=https://your-org.zulipchat.com

# Optional: MCP server configuration
MCP_PORT=3000
MCP_DEBUG=false

# Optional: Docker configuration
COMPOSE_PROJECT_NAME=zulipchat-mcp