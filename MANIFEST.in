# Include essential project files
include README.md
include LICENSE
include SECURITY.md
include SUPPORT.md
include CODE_OF_CONDUCT.md
include CHANGELOG.md

# Include configuration files
include pyproject.toml

# Include source code
recursive-include src *.py
recursive-include src *.pyi
recursive-include integrations *.md
recursive-include integrations *.json
recursive-include integrations *.jsonc
recursive-include integrations *.toml
recursive-include integrations *.sh
recursive-include docs/integrations *.md
recursive-include docs/assets *.svg

# Exclude test files and development artifacts
recursive-exclude tests *
recursive-exclude .github *
recursive-exclude .claude *
recursive-exclude .gemini *
recursive-exclude .cursor *
exclude AGENTS.md
exclude CLAUDE.md
exclude .gitignore
exclude .env
exclude .env.*
exclude *.log
exclude .coverage*
exclude htmlcov
exclude .pytest_cache
exclude __pycache__
exclude .mypy_cache
exclude .ruff_cache
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * .DS_Store
